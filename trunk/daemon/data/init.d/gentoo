depend() {
    need dbus hald
}


start() {
    ebegin "Starting Exalt daemon"
        start-stop-daemon --start --exec /usr/local/bin/exalt-daemon \
        --pidfile /var/run/exaltd.pid
        eend $?
}

stop() {
    ebegin "Stopping Exalt daemon"
        start-stop-daemon --stop --exec /usr/local/bin/exalt-daemon  \
        --pidfile /var/run/exaltd.pid
        eend $?
}

restart() {
    stop
        start
}
}

